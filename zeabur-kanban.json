{
  "$schema": "https://zeabur.com/schema/project.json",
  "name": "kanban-board",
  "description": "Project management Kanban board with Google OAuth",
  "services": [
    {
      "name": "kanban-web",
      "type": "web",
      "source": {
        "provider": "github",
        "repo": "raycoderhk/kanban-board",
        "branch": "main",
        "rootDirectory": "kanban-zeabur"
      },
      "domains": [
        {
          "domain": "kanban.zeabur.app",
          "primary": true
        }
      ],
      "settings": {
        "port": 8080,
        "buildCommand": "npm install",
        "startCommand": "node server.js",
        "outputDirectory": ""
      },
      "env": {
        "SUPABASE_URL": "https://your-project.supabase.co",
        "SUPABASE_ANON_KEY": "your-anon-key",
        "GOOGLE_CLIENT_ID": "your-client-id.apps.googleusercontent.com",
        "GOOGLE_CLIENT_SECRET": "your-client-secret",
        "GOOGLE_CALLBACK_URL": "/auth/google/callback",
        "SESSION_SECRET": "change-this-to-random-secret",
        "NODE_ENV": "production"
      }
    }
  ]
}
